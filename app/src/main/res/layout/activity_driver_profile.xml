<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"

        android:id="@+id/lay_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textColor="#000"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:textStyle="normal"
            android:textSize="25dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_below="@id/lay_1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name "
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textColorHint="#bcafaf"
            android:background="@null"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/user_name_et"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_blw_usrnm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_below="@id/lay_2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE "
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:background="@null"
            android:textColorHint="#bcafaf"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/mobile_et"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_mobile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_below="@id/lay_3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGE"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"

            android:id="@+id/iv_empty_1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="AGE"
            android:background="@null"
            android:textColorHint="#bcafaf"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/age_et"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_empty_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_below="@id/lay_4"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lay_5"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vehicle assigned "
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textColorHint="#bcafaf"
            android:background="@null"
            android:textColor="#000"
            android:textSize="20dp"
            android:id="@+id/vehicle_et"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d7d2d2"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/view_empty_2"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:textColor="#f71a06"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#ede437"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
       android:layout_alignParentRight="true"

        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/add_member"
        android:onClick="update_profile"/>



</RelativeLayout>
