<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/shape2"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Driver Registration"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/driver_reg"
        />

        <TextView
            android:layout_below="@id/driver_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25dp"
            android:id="@+id/name"
            android:gravity="center_horizontal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape1"
                android:layout_below="@id/name"
                android:layout_margin="10dp"
                android:hint="Enter Name"
                android:padding="10dp"
                android:id="@+id/entname"
                />

    <TextView
    android:layout_below="@id/entname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Contact Number"
    android:textSize="25dp"
    android:id="@+id/cntct"
        android:gravity="center_horizontal"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:layout_below="@id/cntct"
        android:layout_margin="10dp"
        android:hint="Enter Contact Number"
        android:padding="10dp"
        android:id="@+id/editcntc"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:textSize="25dp"
        android:layout_below="@id/editcntc"
        android:gravity="center_horizontal"
        android:id="@+id/email"
        />
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:layout_margin="10dp"
        android:hint="Enter E-Mail"
        android:padding="10dp"
        android:layout_below="@id/email"
        android:id="@+id/entemail"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/entemail"
        android:text="Age"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/age"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:layout_margin="10dp"
            android:layout_below="@id/age"
            android:hint="Enter Your Age"
            android:padding="10dp"
            android:id="@+id/urage"
            />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle"
        android:layout_below="@id/urage"
        android:id="@+id/vehicle"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        />

    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape1"
        android:layout_margin="10dp"
        android:hint="Enter Vehicle Number"
        android:layout_below="@id/vehicle"
        android:id="@+id/vehinum"
        android:padding="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@id/vehinum"
        android:gravity="bottom"
        android:layout_centerInParent="true"
        android:onClick="save_to_drivers"
        />

    </RelativeLayout>
    </ScrollView>







</RelativeLayout>
