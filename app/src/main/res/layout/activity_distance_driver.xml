<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_distance_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccf126"
    tools:context="com.example.lenovo.vehicle_trackingapp.distance_driver">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/distances"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:id="@+id/dis_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dis_image"
        android:text="View Distances"
        android:textSize="20dp"
        android:textColor="#000"
        android:textAlignment="center"/>



    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape6"
    android:hint="Date"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
    android:textAlignment="center"
    android:padding="20dp"
        android:textColorHint="#000"
        android:layout_centerInParent="true"
        android:id="@+id/addingdate"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape6"
        android:hint="Vehicle No."
        android:textColorHint="#000"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:layout_below="@id/addingdate"
        android:id="@+id/adding_vehnum"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adding_vehnum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="view distance travelled"
        android:onClick="see_distance"
        />
</RelativeLayout>
