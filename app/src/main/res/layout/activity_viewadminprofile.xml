<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_viewadminprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/gradient"

    tools:context="com.example.lenovo.vehicle_trackingapp.Viewadminprofile">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="PROFILE DETAILS"
    android:textColor="#000"
    android:textSize="30dp"
    android:gravity="center"
    android:layout_marginTop="20dp"
    android:id="@+id/profdet"
    />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/profdet"
    android:text="Name :"
    android:textColor="#000"
    android:textSize="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
        android:id="@+id/adname"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profdet"
        android:text="00"
        android:textColor="#000"
        android:layout_toRightOf="@id/adname"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adname"
        android:text="e-mail :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/ademail"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adname"
        android:text="00"
        android:textColor="#000"
        android:layout_toRightOf="@id/ademail"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ademail"
        android:text="Contact :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/adcntct"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ademail"
        android:text="00"
        android:textColor="#000"
        android:layout_toRightOf="@id/adcntct"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adcntct"
        android:text="No. of Vehicles :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/advehicle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adcntct"
        android:text="00"
        android:textColor="#000"
        android:layout_toRightOf="@id/advehicle"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advehicle"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:text="update"
        android:textColor="#000"
        android:background="@drawable/shape2"
        android:onClick="update_profile"/>

</RelativeLayout>
