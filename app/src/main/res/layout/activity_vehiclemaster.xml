<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vehiclemaster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1dbfff"
    android:orientation="vertical"


    tools:context="com.example.lenovo.vehicle_trackingapp.Vehiclemaster">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/vehname"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape4"
        android:padding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/cmpny"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Number"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:id="@+id/regnum"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vehicle Type"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#fff"
        android:id="@+id/type"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Colour"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#fff"
        android:id="@+id/vehcolor"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Manufacture Year"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:inputType="number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#fff"
        android:id="@+id/vehyear"
        android:padding="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fuel Type"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#fff"
        android:id="@+id/fueltype"
        android:padding="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add vehicle"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape4"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:padding="10dp"
        android:onClick="save_vehicle"


        />



</LinearLayout>
