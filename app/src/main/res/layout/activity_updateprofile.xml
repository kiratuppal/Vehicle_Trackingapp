<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_updateprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#fff"

    tools:context="com.example.lenovo.vehicle_trackingapp.Updateprofile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EDIT PROFILE"
        android:textColor="#000"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/profdet"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profdet"
        android:text="Name :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/adname2"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profdet"
        android:text=""
        android:textColor="#000"
        android:layout_toRightOf="@+id/adname2"
        android:textSize="20dp"
        android:id="@+id/name_et"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adname2"
        android:text="e-mail :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/ademail2"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adname2"
        android:text=""
        android:id="@+id/email_et"
        android:textColor="#000"
        android:layout_toRightOf="@id/ademail2"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ademail2"
        android:text="Contact :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/adcntct2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adcntct2"
        android:text="Password :"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/advehicle2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adcntct2"
        android:text=""
        android:id="@+id/pass_et"
        android:textColor="#000"
        android:layout_toRightOf="@id/advehicle2"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advehicle2"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:text="update"
        android:textColor="#000"
        android:background="@drawable/shape2"
        android:onClick="update_profile"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""

        android:textColor="#000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/adcntct2"
        android:layout_toRightOf="@+id/name_et"
        android:layout_toEndOf="@+id/name_et"
        android:id="@+id/contact_et" />

</RelativeLayout>
