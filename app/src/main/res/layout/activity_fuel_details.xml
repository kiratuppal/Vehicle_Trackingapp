<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fuel_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fuel2"
    tools:context="com.example.lenovo.vehicle_trackingapp.Fuel_details">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#aacccccc"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUEL DETAILS"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/fuel"
        android:layout_marginTop="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
       android:layout_below="@+id/fuel"
        android:background="#30000000"
       android:layout_centerInParent="true"
        android:layout_margin="20dp"
        >


     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:background="@null"
         android:padding="10dp"
         android:layout_marginTop="20dp"

         android:layout_marginRight="20dp"
         android:layout_marginLeft="20dp"
         android:hint="Vehicle No."
         android:textColorHint="#fff"
         android:id="@+id/bill"

         />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/bill"
            android:background="#fff"
            />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/bill"
    android:layout_marginTop="10dp"
    android:background="@null"
    android:padding="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:hint="Bill No."
    android:textColorHint="#fff"
    android:id="@+id/volume"
    android:inputType="number"
    />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/volume"
            android:background="#fff"
            />
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/volume"
         android:layout_marginTop="10dp"
         android:textColorHint="#fff"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:background="@null"
         android:padding="10dp"
         android:hint="Volume"
         android:inputType="number"
         android:id="@+id/amt"
         />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/amt"
            android:background="#fff"
            android:id="@+id/amt1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amt1"
            android:hint="Amount"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff"
            android:layout_marginLeft="20dp"
            android:id="@+id/date"
            android:background="@null"
            android:padding="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/date"
            android:background="#fff"
            android:id="@+id/view1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:hint="Date"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:padding="10dp"
            android:id="@+id/date1"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/date1"
            android:background="#fff"
            android:id="@+id/view2"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@id/view2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            android:background="#2f8536"
            android:id="@+id/submit"
            android:onClick="submit"
            android:layout_centerHorizontal="true"
            />


</RelativeLayout>
    </RelativeLayout>