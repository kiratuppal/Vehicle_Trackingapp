<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sendotp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edc8c8"
    tools:context="com.example.lenovo.vehicle_trackingapp.sendotp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter One Time Password"
        android:textSize="20dp"
        android:textColor="#000"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearotp"
        android:weightSum="4"
        android:layout_marginTop="30dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/firstblck"
            android:background="@drawable/shape6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/secndblck"
            android:background="@drawable/shape6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/thirdblck"
            android:background="@drawable/shape6"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:gravity="center"
            android:id="@+id/fourthtblck"
            android:background="@drawable/shape6"/>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset password"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"

        />





</LinearLayout>
