<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgotpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#edc8c8"
    tools:context="com.example.lenovo.vehicle_trackingapp.forgotpassword"
    android:orientation="vertical">
     <EditText
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/shape6"
         android:layout_marginTop="40dp"
         android:text="Enter Email"
         android:textColor="#000"
         android:padding="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:id="@+id/entemail"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send otp"
        android:layout_gravity="center_horizontal"
        android:onClick="goto_otp"

        />
</LinearLayout>
