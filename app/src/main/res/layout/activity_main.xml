<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:src="@drawable/vehicle2"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b9cccccc"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ADMIN"
    android:textSize="40dp"
    android:shadowColor="#000"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="20dp"
    android:id="@+id/adminid"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="login"
    android:layout_toRightOf="@id/adminid"
    android:textSize="30dp"
  android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/image1"
    />


       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/user"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:layout_below="@id/image1"
           android:id="@+id/user"
           />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/user"
           android:background="@drawable/shape1"
           android:padding="10dp"
           android:textColor="#000"
           android:imeOptions="actionNext"
           android:layout_margin="20dp"
           android:hint="Email"
           android:textColorHint="#000"
           android:id="@+id/user1"
           />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/user1"
           android:background="@drawable/shape1"
           android:padding="10dp"
           android:textColor="#000"
           android:textColorHint="#000"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginBottom="20dp"
           android:hint="Password"
           android:id="@+id/passwrd"
           android:imeOptions="actionDone"
           />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/passwrd"
           android:background="@drawable/shape1"
           android:layout_centerHorizontal="true"
           android:text="Sign in"
           android:textColor="#000"
           android:id="@+id/butt1"
           android:onClick="goto_signin"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/butt1"
            android:background="@drawable/shape1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="register"
            android:onClick="goto_signup"
            android:id="@+id/registr"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registr"
        android:text="forgot password ?"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:onClick="forgot"
        />


</RelativeLayout>
