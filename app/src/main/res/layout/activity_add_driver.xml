<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f16e1c"
    tools:context="com.example.lenovo.vehicle_trackingapp.add_driver">
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View Drivers"
    android:textColor="#fff"
    android:textSize="30dp"
    android:padding="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:background="@drawable/shape4"
    android:id="@+id/viewdriver"
    android:onClick="goto_view_driver"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Driver"
        android:textColor="#fff"
        android:textSize="30dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape4"
        android:id="@+id/adddriver"
        android:layout_below="@id/viewdriver"
        android:onClick="goto_registration"
        />
</RelativeLayout>
